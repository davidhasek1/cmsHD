<%- include('./adminLayouts/Ahead.ejs') %>
<%- include('./adminLayouts/gridStart.ejs') %>

<% if(isAuthenticated) { %>

<h1 class="content-heading-h1">Add new user</h1>
<div class="form-div">
    <% if(userExists) { %>
        <div class="login-message login-message--error"><%= userExists %></div>
    <% } %>
    <% if(newUserMsg) { %>
        <div class="login-message "><%= newUserMsg %></div>
    <% } %>
    <form id="form" action="/admin/users/add-user" method="POST">
        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
        <label for="mail">Email</label>
            <input type="email" name="email">
        <label for="password">Password</label>
            <input type="password" name="password">
        <label for="confirm">Confirm password</label>
            <input type="password" name="confirm">
        <button class="adduser-btn" type="submit">Add&nbspuser</button>
    
    </form>  
</div>

<% } %>

<%- include('./adminLayouts/gridEnd.ejs') %>
<%- include('./adminLayouts/Aend.ejs') %>