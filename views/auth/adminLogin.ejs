<%- include('../admin/adminLayouts/Ahead.ejs') %>

<div class="form-div form-div-login">
    <% if(errorMessage) { %>
        <div class="login-message login-message--error"><%= errorMessage %></div>
    <% } %>
    <%  if(password) { %>
    <div class="login-message"><%= password %></div>
    <% } %>
    <h1 class="content-heading-h1 login-logo">cmsHD</h1>
    <form id="form" action="/admin" method="POST" novalidate>
        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
        <label for="">Email</label>
        <input type="email" name="email" id="">
        <label for="">Heslo</label>
        <input type="password" name="password" id="">
        <button class="adduser-btn login-btn" type="submit">Login</button>
    </form>
    <div class="login-resetpassword">
        <a id="resetPasswordlink" href="/reset">Reset password</a>
    </div>
</div>
  
<%- include('../layouts/end.ejs') %>